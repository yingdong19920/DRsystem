<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>

<VBox spacing="10" alignment="CENTER" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cqu.drsystem.PrimaryController">
   <padding>
      <Insets top="20" right="20" bottom="20" left="20"/>
   </padding>

   <Label text="Disaster Response System Enhanced" style="-fx-font-size: 20; -fx-font-weight: bold;"/>
   
   <GridPane hgap="10" vgap="10" alignment="CENTER">
      <Label text="Disaster Type:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
      <ComboBox fx:id="disasterTypeComboBox" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

      <Label text="Location:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
      <TextField fx:id="locationField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
      
      <Label text="Severity:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
      <ComboBox fx:id="severityComboBox" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
      
      <Label text="Description:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
      <TextArea fx:id="descriptionArea" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
   </GridPane>

   <HBox spacing="10" alignment="CENTER">
      <CheckBox fx:id="fireTruckCheckBox" text="Fire Truck"/>
      <Spinner fx:id="fireTruckSpinner" prefWidth="80"/>
      
      <CheckBox fx:id="ambulanceCheckBox" text="Ambulance"/>
      <Spinner fx:id="ambulanceSpinner" prefWidth="80"/>
      
      <CheckBox fx:id="rescueTeamCheckBox" text="Rescue Team"/>
      <Spinner fx:id="rescueTeamSpinner" prefWidth="80"/>
   </HBox>

   <!-- Report Disaster button -->
   <Button text="Report Disaster" onAction="#reportDisaster"/>

   <!-- Resource Management Table -->
   <Label text="Resource Management"/>
   <ListView fx:id="resourceListView" prefHeight="150"/>

   <!-- Department Coordination -->
   <Label text="Department Coordination"/>
   <ListView fx:id="departmentListView" prefHeight="150"/>

   <!-- Disaster Log -->
   <Label text="Disaster Log"/>
   <TextArea fx:id="disasterLogArea" editable="false" prefHeight="150"/>

   <!-- Clean Log button -->
   <Button text="Clean Log" onAction="#cleanLog"/>
   
    <!-- Logout button -->
   <Button text="Logout" onAction="#logout" alignment="CENTER"/>
</VBox>
